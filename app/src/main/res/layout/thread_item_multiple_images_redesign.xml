                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_with_summary_container_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_with_summary_container_3"
            android:layout_marginLeft="@dimen/item_padding_horizontal"
            android:layout_marginStart="@dimen/item_padding_horizontal"
            android:layout_toEndOf="@+id/image_with_summary_container_3"
            android:layout_toRightOf="@+id/image_with_summary_container_3">

            <FrameLayout
                android:id="@+id/image_container_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/thread_image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    app:srcCompat="@color/dark_gray" />

                <ImageView
                    android:id="@+id/webm_imageview_4"
                    android:layout_width="@dimen/item_webm_pic_width"
                    android:layout_height="@dimen/item_webm_pic_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_with_summary_container_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/image_with_summary_container_1">

            <FrameLayout
                android:id="@+id/image_container_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/thread_image_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    app:srcCompat="@color/dark_gray" />

                <ImageView
                    android:id="@+id/webm_imageview_5"
                    android:layout_width="@dimen/item_webm_pic_width"
                    android:layout_height="@dimen/item_webm_pic_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_5"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_with_summary_container_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/image_with_summary_container_2"
            android:layout_marginLeft="@dimen/item_padding_horizontal"
            android:layout_marginStart="@dimen/item_padding_horizontal"
            android:layout_toEndOf="@+id/image_with_summary_container_5"
            android:layout_toRightOf="@+id/image_with_summary_container_5">

            <FrameLayout
                android:id="@+id/image_container_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/thread_image_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    app:srcCompat="@color/dark_gray" />

                <ImageView
                    android:id="@+id/webm_imageview_6"
                    android:layout_width="@dimen/item_webm_pic_width"
                    android:layout_height="@dimen/item_webm_pic_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_6"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_with_summary_container_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/image_with_summary_container_2"
            android:layout_marginLeft="@dimen/item_padding_horizontal"
            android:layout_marginStart="@dimen/item_padding_horizontal"
            android:layout_toEndOf="@+id/image_with_summary_container_6"
            android:layout_toRightOf="@+id/image_with_summary_container_6">

            <FrameLayout
                android:id="@+id/image_container_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/thread_image_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    app:srcCompat="@color/dark_gray" />

                <ImageView
                    android:id="@+id/webm_imageview_7"
                    android:layout_width="@dimen/item_webm_pic_width"
                    android:layout_height="@dimen/item_webm_pic_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_7"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_with_summary_container_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/image_with_summary_container_2"
            android:layout_marginLeft="@dimen/item_padding_horizontal"
            android:layout_marginStart="@dimen/item_padding_horizontal"
            android:layout_toEndOf="@+id/image_with_summary_container_7"
            android:layout_toRightOf="@+id/image_with_summary_container_7">

            <FrameLayout
                android:id="@+id/image_container_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/thread_image_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    app:srcCompat="@color/dark_gray" />

                <ImageView
                    android:id="@+id/webm_imageview_8"
                    android:layout_width="@dimen/item_webm_pic_width"
                    android:layout_height="@dimen/item_webm_pic_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/webm2" />

            </FrameLayout>

            <TextView
                android:id="@+id/image_summary_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/image_container_8"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="summary"
                android:textSize="10sp" />
        </RelativeLayout>



    </RelativeLayout>

    <com.koresuniku.wishmaster.ui.widget.NoScrollTextView
        android:id="@+id/thread_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagies_and_summaries_container"
        android:lines="6"
        android:text="comment"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/posts_and_files_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thread_comment"
        android:layout_marginTop="@dimen/item_margin_content_divider"
        android:text="posts and files info"
        android:textSize="12sp" />


    <FrameLayout
        android:id="@+id/page_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posts_and_files_info"
        android:layout_marginTop="@dimen/item_padding_vertical">

        <include
            android:id="@+id/threads_page_indicator_view"
            layout="@layout/threads_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </include>
    </FrameLayout>

</RelativeLayout>